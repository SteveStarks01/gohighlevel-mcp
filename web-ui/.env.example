# GoHighLevel Configuration
GHL_CLIENT_ID=your_ghl_client_id
GHL_CLIENT_SECRET=your_ghl_client_secret
GHL_SHARED_SECRET=your_ghl_shared_secret
GHL_REDIRECT_URI=https://yourapp.com/oauth/callback

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3-sonnet
OPENROUTER_MAX_TOKENS=4000
OPENROUTER_REFERER=https://ghl-mcp-app.com

# Database Configuration
DATABASE_URL=postgresql://ghl_user:ghl_password@localhost:5432/ghl_mcp
# Alternative SQLite for development
# DATABASE_URL=sqlite:///./data/app.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# PostgreSQL (for Docker)
POSTGRES_DB=ghl_mcp
POSTGRES_USER=ghl_user
POSTGRES_PASSWORD=ghl_password

# Application Settings
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,https://app.gohighlevel.com,https://app.msgsndr.com

# Frontend Environment Variables (React)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_APP_NAME=GoHighLevel MCP AI Assistant
REACT_APP_VERSION=1.0.0

# Development Settings
DEBUG=true
RELOAD=true
